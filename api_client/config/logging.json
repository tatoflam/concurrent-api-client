{
    "version": 1,
    "disable_existing_loggers": false,
    "root": {
      "level": "DEBUG",
      "handlers": [
        "consoleHandler",
        "logFileHandler"
      ]
    },
    "api_client": {
        "level": "DEBUG",
        "handlers": [
          "consoleHandler",
          "logFileHandler"
        ],
        "propagate": false
    },
    "handlers": {
      "consoleHandler": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "consoleFormatter",
        "stream": "ext://sys.stdout"
      },
      "logFileHandler": {
        "class": "logging.handlers.TimedRotatingFileHandler",
        "level": "DEBUG",
        "formatter": "logFileFormatter",
        "filename": "api_client/log/api_client.log",
        "when" : "MIDNIGHT",
        "backupCount": 14,
        "encoding": "utf-8"
      }
    },
    "formatters": {
      "consoleFormatter": {
        "format": "%(asctime)s %(thread)d %(levelname)s %(name)s %(funcName)s %(lineno)d %(message)s"
      },
      "logFileFormatter": {
        "format": "%(asctime)s %(thread)d %(levelname)s %(name)s %(funcName)s %(lineno)d %(message)s"
      }
    }
}